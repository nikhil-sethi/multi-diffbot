<launch>
    <!-- <param name="/use_sim_time" value="true" /> -->

    <!-- start world -->
    <!-- <node name="gazebo" pkg="gazebo_ros" type="gazebo" 
    args="$(find mirte_sim)/worlds/robohouse.world" respawn="false" output="screen" /> -->
    <arg name="paused" default="false"/>
    <arg name="use_sim_time" default="true"/>
    <arg name="gui" default="true"/>
    <arg name="headless" default="false"/>
    <arg name="debug" default="false"/>
    <arg name="world_name" default="$(find mirte_sim)/worlds/robohouse.world"/>
    <arg name="rvizconfig" default="$(find bullproof_nav)/rviz/mirte_nav.rviz" />

    <!-- Gazebo: We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(arg world_name)"/>
        <arg name="debug" value="$(arg debug)" />
        <arg name="gui" value="$(arg gui)" />
        <arg name="paused" value="$(arg paused)"/>
        <arg name="use_sim_time" value="$(arg use_sim_time)"/>
        <arg name="headless" value="$(arg headless)"/>
    </include>

      <!-- rviz -->
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(arg rvizconfig)" required="true"/>

    <group ns="mirte">
        <param name="tf_prefix" value="mirte_tf" />
        <include file="$(find mirte_sim)/launch/mirte_spawn.launch" >
            <arg name="init_pose" value="-x 1 -y 1 -z 0" />
            <arg name="robot_name"  value="mirte" />
        </include>
    </group>

    <group ns="farmer">
        <param name="tf_prefix" value="farmer_tf" />
        <include file="$(find mirte_sim)/launch/mirte_spawn.launch" >
            <arg name="init_pose" value="-x 2.6 -y 1 -z 0" />
            <arg name="robot_name"  value="farmer" />
        </include>
    </group>
 
    <group ns="bull">
        <param name="tf_prefix" value="bull_tf" />
        <include file="$(find mirte_sim)/launch/mirte_spawn.launch" >
        <arg name="init_pose" value="-x 0.5 -y 0.5 -z 0" />
        <arg name="robot_name"  value="bull" />
        </include>
    </group>
</launch>
