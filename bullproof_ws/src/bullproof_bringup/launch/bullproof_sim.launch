<launch>
    <arg name="paused" default="false"/>
    <arg name="use_sim_time" default="true"/>
    <arg name="gui" default="true"/>
    <arg name="headless" default="false"/>
    <arg name="debug" default="false"/>
    <arg name="world_name" default="$(find mirte_sim)/worlds/robohouse.world"/>
    <arg name="rvizconfig" default="$(find bullproof_nav)/rviz/mirte_nav.rviz" />

    <!-- Gazebo: We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(arg world_name)"/>
        <arg name="debug" value="$(arg debug)" />
        <arg name="gui" value="$(arg gui)" />
        <arg name="paused" value="$(arg paused)"/>
        <arg name="use_sim_time" value="$(arg use_sim_time)"/>
        <arg name="headless" value="$(arg headless)"/>
    </include>

      <!-- rviz -->
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(arg rvizconfig)" required="true"/>

    <include file="$(find bullproof_bringup)/launch/spawn_bots.launch"/>
    <include file="$(find bullproof_perception)/launch/bullproof_perception.launch"/>
    <include file="$(find bullproof_nav)/launch/bullproof_nav.launch"/>
    <!-- <node name="vel_forward" pkg="bullproof_bringup" type="sim_publisher.py" output="screen"/> -->
</launch>